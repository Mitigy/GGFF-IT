{
    "name": "GGFF It!",
    "description": "Makes it easy to shorten a URL with GGFF.io!",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "/icons/icon-16x16.png",
            "32": "/icons/icon-32x32.png",
            "48": "/icons/icon-48x48.png",
            "128": "/icons/icon-128x128.png"
        }
    },
    "permissions": [
        "contextMenus",
        "activeTab"
    ],
    "host_permissions": [
        "https://ggff.io/*"
    ],
    "icons": {
        "16": "/icons/icon-16x16.png",
        "32": "/icons/icon-32x32.png",
        "48": "/icons/icon-48x48.png",
        "128": "/icons/icon-128x128.png"
    }
}
